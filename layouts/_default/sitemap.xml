{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages }}
  {{- if not (eq .Section "tags") }}
  {{- if not (eq .Kind "taxonomy") }}{{/* skip /tags/ listing page */}}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
    {{- end }}
    <changefreq>{{ if .IsHome }}daily{{ else if eq .Kind "term" }}weekly{{ else }}weekly{{ end }}</changefreq>
    <priority>{{ if .IsHome }}1.0{{ else if eq .Kind "term" }}0.6{{ else if eq .Kind "section" }}0.5{{ else }}0.8{{ end }}</priority>
  </url>
  {{- end }}
  {{- end }}
  {{- end }}
</urlset>
